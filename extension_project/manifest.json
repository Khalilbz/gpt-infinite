{
  "manifest_version": 3,
  "name": "ChatGPT API",
  "version": "1.0",
  "description": "This extension converts chatGPT response text into speech and plays it automatically.",
  "permissions": [
    "activeTab",
    "http://localhost:3123/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/chat/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ChatGPT API"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}